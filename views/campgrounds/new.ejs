<%- include("../partials/header") %>

<div class="container">
    <h1 class="text-center mb-3">Create a new campground</h1>

    <form action="/campgrounds" method="POST" class="form-group">
        <div class="row">
            <div class="form-group col-md-6 mx-auto">
                <label for="new-name">Campground Name</label>
                <input type="text" name="campground[name]" id="new-name" class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6 mx-auto">
                <label for="new-price">Price Per Night</label>
                <input type="number" name="campground[price]" id="new-price" class="form-control" min="0.01" step="0.01">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6 mx-auto">
                <label for="new-image">Image URL</label>
                <input type="text" name="campground[image]" id="new-image" class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6 mx-auto">
                <label for="new-location">Location</label>
                <input type="text" name="campground[location]" id="new-location" class="form-control">
            </div>
        </div>
		<div class="row">
            <div class="form-group col-md-6 mx-auto">
                <label for="new-description">Description</label>
                <textarea name="campground[description]" id="new-description" class="form-control" rows="4" ></textarea>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6 mx-auto">
                <button type="submit" class="btn btn-lg btn-success btn-block">Submit</button>
            </div>
        </div>
    </form>
    <div class="row">
        <div class="col-md-6 ml-auto mr-auto">
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>